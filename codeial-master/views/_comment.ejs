<li id="comment-<%= comment._id %>">
    <% if((locals.user && locals.user.id == comment.user.id)||(locals.user && locals.user.id == i.user.id)) {%>
    <span><a class="delete-comment-button" href="/comments/destroy/<%= comment.id%>">X</a></span>
    <% } %>
    <p><%= comment.content%></p>
    <span><%= comment.user.name%></span>
    <small>
        <% if(locals.user) {%>
            <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%= comment._id %>&type=Comment">
                <%= comment.likes.length %> Likes
            </a>
        <% } else {%>
            <%= comment.likes.length %> Likes
        <%} %>    
            
    </small>
</li>